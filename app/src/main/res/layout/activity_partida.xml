<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/rl01"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="1">

        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/gridView"
            android:numColumns="9"
            android:gravity="center"
            android:columnWidth="50dp"
            android:stretchMode="columnWidth"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:listSelector="@drawable/gv_item_selected"
            >
        </GridView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl02"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="0.25">

        <Button
            android:id="@+id/btOne"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="@string/_1"
            android:textAlignment="center"
            android:layout_toStartOf="@+id/btTwo"
            android:layout_alignBottom="@+id/btThree"/>
        <Button
            android:id="@+id/btTwo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="@string/_2"
            android:textAlignment="center"
            android:layout_toStartOf="@+id/btThree"
            android:layout_alignBottom="@+id/btThree"/>
        <Button
            android:id="@+id/btThree"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="@string/_3"
            android:textAlignment="center"
            android:layout_centerInParent="true"/>
        <Button
            android:id="@+id/btFour"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="@string/_4"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/btThree"
            android:layout_alignBottom="@+id/btThree"/>
        <Button
            android:id="@+id/btFive"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="@string/_5"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/btFour"
            android:layout_alignBottom="@+id/btThree"/>
        <Button
            android:id="@+id/btSix"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="@string/_6"
            android:textAlignment="center"
            android:layout_below="@+id/btTwo"
            android:layout_marginStart="90dp"/>
        <Button
            android:id="@+id/btSeven"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="@string/_7"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/btSix"
            android:layout_alignBottom="@+id/btSix"/>
        <Button
            android:id="@+id/btEight"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="@string/_8"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/btSeven"
            android:layout_alignBottom="@+id/btSix"/>
        <Button
            android:id="@+id/btNine"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="@string/_9"
            android:textAlignment="center"
            android:layout_toEndOf="@+id/btEight"
            android:layout_alignBottom="@+id/btSix"/>

    </RelativeLayout>
</LinearLayout>